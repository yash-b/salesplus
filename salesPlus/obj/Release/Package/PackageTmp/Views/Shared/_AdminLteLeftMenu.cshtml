@using Microsoft.AspNet.Identity
@* 
 This partial controls the left menu of the AdminLTE dashboard and is called automatically by _AdminLteLayout
    This is where you can add, modify, or remove navigation options in your app
    TODO: This preserves the links as-is for the demo, which lead to broken pages!
    It's up to you to make sure these links either get deleted or lead somewhere REAL!
*@


@{
    Layout = null;
}
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="/Content/AdminLTE/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p>@User.Identity.GetUserName()</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span> <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="index.html"><i class="fa fa-circle-o"></i> Dashboard v1</a></li>
                    <li class="active"><a href="index2.html"><i class="fa fa-circle-o"></i> Dashboard v2</a></li>
                </ul>
            </li>
                    
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-pie-chart"></i>
                    <span>Purchase</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="~/PurchaseEntry/Index"><i class="fa fa-circle-o"></i> New Purchase</a></li>
                    <li><a href="~/Purchase/Index"><i class="fa fa-circle-o"></i> Purchase History</a></li>
                    <li><a href="~/Supplier/Index"><i class="fa fa-circle-o"></i> Suppliers</a></li>
                </ul>
            </li>

            <li class="treeview">
                <a href="#">
                    <i class="fa fa-pie-chart"></i>
                    <span>Inventory</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="~/Stock/Index"><i class="fa fa-circle-o"></i> Stock</a></li>
                    <li><a href="~/DrugGenericName/Index"><i class="fa fa-circle-o"></i> Generic Names</a></li>
                    <li><a href="~/Item/Index"><i class="fa fa-circle-o"></i> Items</a></li>
                    <li><a href="~/Manufacturer/Index"><i class="fa fa-circle-o"></i> Manufacturers</a></li>

                </ul>
            </li>

            <li class="treeview">
                <a href="#">
                    <i class="fa fa-edit"></i> <span>Sales</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="~/SalesEntry/Index"><i class="fa fa-circle-o"></i> New Sales</a></li>
                    <li><a href="~/Sales/Index"><i class="fa fa-circle-o"></i> Sales History</a></li>
                </ul>
            </li> 
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-files-o"></i>
                        <span>User Management</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu">                    
                            <li><a href="~/RolesAdmin/Index"><i class="fa fa-circle-o"></i> Roles</a></li>
                            <li><a href="~/UsersAdmin/Index"><i class="fa fa-circle-o"></i> Users</a></li>                    
                    </ul>
                </li>  
            }
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

